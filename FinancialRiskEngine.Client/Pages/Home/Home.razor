@page "/"
@using FinancialRiskEngine.Client.Components.Display
@using FinancialRiskEngine.Engine
@inject NavigationManager _navigation
@inject IJSRuntime JSRuntime

<div style="margin: 3em">
    <MudGrid>
        <MainCard ColorCode="#2196f3" Title="Interest Rates" OnButtonClicked="NavigateToInterestRatesPage" Loading="@_loadingTemplates" />
        <MainCard ColorCode="#2196f3" Title="Return simulator" Loading="@_loadingTemplates" />
        <MainCard Title="Risk/Return Analysis" Loading="@_loadingTemplates" />
        <MainCard ColorCode="#e69670" Title="Configurations" Loading="@_loadingTemplates" />
        <MainCard ImageLink="/img/documents.jpeg" Title="Resources" Description="To find articles and other documents." OnButtonClicked="NavigateToResourcesPage" Loading="@_loadingTemplates" />
    </MudGrid>
</div>

@code {
    public Class1 class1 { get; set; } = new Class1();
    private bool _loadingTemplates = true;
    protected override async Task OnInitializedAsync()
    {
        if (JSRuntime is IJSInProcessRuntime)
        {
            _loadingTemplates = false;
            StateHasChanged();
        }
    }

    private async Task NavigateToResourcesPage()
    {
        _navigation.NavigateTo("resources");
    }
    private async Task NavigateToInterestRatesPage()
    {
        _navigation.NavigateTo("interest-rates");
    }
}